 	if (r)
 		dev_err(&dev->pdev->dev, "Fatal error during modeset init\n");
 
+#ifdef CONFIG_CPU_LOONGSON3
+	turn_on_lvds();
+#endif
+
 	/* Call ACPI methods: require modeset init
 	 * but failure is not fatal
 	 */
