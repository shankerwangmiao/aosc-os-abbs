cd "$SRCDIR"/grub-${PKGVER/\~/-}

abinfo "Configuring GRUB for EFI ..."
./configure \
    --with-platform=efi \
    --disable-efiemu \
    --disable-mm-debug \
    --enable-nls \
    --enable-device-mapper \
    --enable-cache-stats \
    --enable-boot-time \
    --enable-grub-mkfont \
    --enable-grub-mount \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --mandir=/usr/share/man \
    --infodir=/usr/share/info \
    --datarootdir=/usr/share \
    --sysconfdir=/etc \
    --program-prefix= \
    --with-bootdir=/boot \
    --with-grubdir=grub \
    --disable-werror \
    --enable-build-id \
    --disable-rpm-sort

abinfo "Building GRUB for EFI ..."
make

abinfo "Installing GRUB for EFI ..."
make install \
    DESTDIR="$PKGDIR" \
    bashcompletiondir="/usr/share/bash-completion/completions"

(
    cd grub-core

    abinfo "Building GRUB EFI image ..."
    grub-mkimage \
        -d . \
        -o "$PKGDIR"/usr/lib/grub/loongarch64-efi/bootarm.efi \
        -O loongarch64-efi \
        -p /boot/grub \
            ntfs hfs boot cat efi_gop elf fat hfsplus \
            iso9660 linux memdisk minicmd part_apple ext2 \
            extcmd xfs part_bsd part_gpt search search_fs_file \
            chain btrfs loadenv lvm minix minix2 reiserfs memrw mmap \
            msdospart scsi loopback normal configfile gzio all_video efi_gop \
            gfxterm gettext echo boot chain eval
)
