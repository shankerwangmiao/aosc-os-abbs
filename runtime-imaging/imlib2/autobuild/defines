PKGNAME=imlib2
PKGDES="Image loading, saving, rendering, and manipulation library"
PKGDEP="libtiff giflib bzip2 freetype x11-lib libpng libid3tag libjpeg-turbo"
BUILDDEP="doxygen"
PKGSEC=libs

AUTOTOOLS_AFTER=" \
    --sysconfdir=/etc/imlib2 \
    --x-libraries=/usr/lib \
    --disable-static \
    --enable-doc-build" 
AUTOTOOLS_AFTER__AMD64=" \
    ${AUTOTOOLS_AFTER} \
    --enable-amd64"
